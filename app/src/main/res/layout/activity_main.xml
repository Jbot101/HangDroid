<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">



    <fragment
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/portrait_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="edu.slcc.joshuayoung.hangdroid.FragmentPortrait"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HangDroid"
            android:id="@+id/textView"
            android:layout_marginBottom="75dp"
            android:textSize="40dp"
            android:textColor="@color/title_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CSIS-2630 Joshua Young"
            android:id="@+id/nameView"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"
            android:textColor="@color/title_green" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Player"
            android:id="@+id/button"
            android:layout_marginBottom="10dp"
            android:onClick="startSinglePlayerGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiplayer"
            android:id="@+id/button2"
            android:layout_marginBottom="10dp"
            android:onClick="startMultiPlayerGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Player"
            android:id="@+id/button4"
            android:layout_marginBottom="10dp"
            android:onClick="startTextPlayerGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores"
            android:id="@+id/button3"
            android:layout_marginBottom="10dp"
            android:onClick="openScores"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:id="@+id/button5"
            android:layout_marginBottom="10dp"
            android:onClick="StartContactsActivity"/>
    </LinearLayout>


</RelativeLayout>
